{
    "manifest_version": 3,
    "name": "Fidelity Positions Exporter",
    "version": "1.0",
    "description": "Exports Fidelity positions data to CSV automatically once per day or manually.",
    "permissions": ["downloads", "tabs", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://digital.fidelity.com/ftgw/digital/portfolio/positions",
                "https://digital.fidelity.com/ftgw/digital/portfolio/summary"
            ],
            "js": ["content.js"]
        }
    ]
}